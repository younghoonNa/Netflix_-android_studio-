<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#232323">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="#232323">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/mainImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:src="@drawable/tazza" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="30dp"
                                    android:textColor="@color/white"
                                    android:text="설명을 추가할 공간.\n 버튼 및 재생버튼도 추가."/>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="당신의 Best 영화를 투표해주세요. "
                                    android:textColor="@color/white"
                                    android:textSize="18dp"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="투표하기"
                                    android:background="#232323"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:id="@+id/btnResult"/>

                            </LinearLayout>

                            <!-- 1번째 scrollView -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:id="@+id/iv1"
                                            android:src="@drawable/bumzui"
                                            android:layout_marginRight="10dp"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/chiken"
                                            android:id="@+id/iv2"
                                            android:layout_marginRight="10dp"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/vt"
                                            android:id="@+id/iv3"
                                            android:layout_marginRight="10dp"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/wra"
                                            android:id="@+id/iv4"
                                            android:layout_marginRight="10dp"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/iv5"
                                            android:src="@drawable/bro"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/iv6"
                                            android:src="@drawable/devil"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/iv7"
                                            android:src="@drawable/inner"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/iv8"
                                            android:src="@drawable/lookfor"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/iv9"
                                            android:src="@drawable/man"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/iv10"
                                            android:src="@drawable/year"/>
                                    </LinearLayout>
                                </HorizontalScrollView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="15dp">

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="파일 입출력 활용한 한국 드라마 보기"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"/>

                                <TextView
                                    android:layout_marginLeft="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="클릭시 설명과 사진이 나타납니다."
                                    android:textColor="@color/white"
                                    android:textSize="8dp"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_1"
                                            android:src="@drawable/binsenzo"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_2"
                                            android:src="@drawable/doctor"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_3"
                                            android:src="@drawable/doggabi"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_4"
                                            android:src="@drawable/getmaeul"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_5"
                                            android:src="@drawable/hotel"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_6"
                                            android:src="@drawable/leetaewon"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_7"
                                            android:src="@drawable/life"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_8"
                                            android:src="@drawable/love"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_9"
                                            android:src="@drawable/melo"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/img2_10"
                                            android:src="@drawable/signel"/>
                                    </LinearLayout>
                                </HorizontalScrollView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="내가 본 영상 다시보기"
                                android:textColor="@color/white"
                                android:textSize="20dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/abouttime"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/gum4"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/heartsignel"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/knowbro"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/knowing"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/lawschool"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/loveinterffer"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/nowyouseeme"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/sweethome"/>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/stroy"/>

                                    </LinearLayout>
                                </HorizontalScrollView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/second"
                android:background="#232323">

                <!-- 검색 창 -->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#454545">

                    <ImageButton
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:id="@+id/btnSearch"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/search_cutout"/>

                    <AutoCompleteTextView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionHint="선택하세요"
                        android:completionThreshold="2"
                        android:hint="프로그램, 영화, 장르, 등을 검색"
                        android:textColorHint="#FFFFFF"
                        android:shadowColor="@color/white"
                        android:textColor="#FFFFFF">
                    </AutoCompleteTextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="입력된 텍스트 출력"
                        android:id="@+id/tvexam"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/searchResult_layout"
                        android:background="#343434">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:id="@+id/searchResult_Img"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bubuworld2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/searchResult_tv"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="부부의 세계"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#343434">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/getcity"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="갯마을 차차차"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#343434">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lovetroblem"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="연애의 참견"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#343434">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/squid"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="오징어 게임"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#343434">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/otis"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="오티스의 비밀 상담소"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#343434">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/myname"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="마이 네임"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#232323"
                android:id="@+id/third"
                android:orientation="vertical">

            </LinearLayout>
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:background="#454545"
            >

        </TabWidget>
    </LinearLayout>

</TabHost>